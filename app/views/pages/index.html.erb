<h1 align="center">This is all pages created</h1>
<% @pages.each do |page| %>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="well well-lg">
				<div class="page-title">
					<%= link_to page.title, page_path(page) %>
				</div>
				<div class="page-body">
					<%= truncate(page.description, length: 100) %>
				</div>
				<div class="page-actions">
					<%= link_to 'Edit this page', edit_page_path(page), class: "btn btn-xs btn-primary" %>
					<%= link_to 'Delete this page', page_path(page), method: :delete, data: {confirm: 'Are you sure you want to delete this page?'}, class: "btn btn-xs btn-danger" %>
				</div>
			</div>
		</div>
	</div>
<% end %>

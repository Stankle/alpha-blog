<h1 align="center"><%= t :pages_header, scope: [:index] %></h1>
<% @pages.each do |page| %>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="well well-lg">
				<div class="page-title">
					<%= link_to page.title, page_path(page) %>
				</div>
				<div class="page-body">
					<%= truncate(page.description, length: 100) %>
				</div>
				<div class="page-meta-datails">
					<!--diz quem foi o usario que criou a página, se o valor usuario para aquela pagina for nulo então escreve a palavra ninguém-->
					<small><%= t :created_by %> <%= page.user ? page.user.name : "ninguém"  %>, <%= time_ago_in_words(page.created_at) %> </small>
				</div>
				<div class="page-actions">
					<%= link_to t(:edit, scope: [:index]), edit_page_path(page), class: "btn btn-xs btn-primary" %>
					<%= link_to t(:delete, scope: [:index]), page_path(page), method: :delete, data: {confirm: t(:confirm, scope: [:index])}, class: "btn btn-xs btn-danger" %>
				</div>
			</div>
		</div>
	</div>
<% end %>
